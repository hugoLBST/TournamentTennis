{% extends 'base.html.twig' %}

{% block title %}Tour index{% endblock %}

{% block body %}
    <h1>Tour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>DateFin</th>
                <th>Statut</th>
                <th>Numero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tour in tours %}
            <tr>
                <td>{{ tour.id }}</td>
                <td>{{ tour.type }}</td>
                <td>{{ tour.dateFin ? tour.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ tour.statut }}</td>
                <td>{{ tour.numero }}</td>
                <td>
                    <a href="{{ path('tour_show', {'id': tour.id}) }}">show</a>
                    <a href="{{ path('tour_edit', {'id': tour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tour_new') }}">Create new</a>
{% endblock %}
